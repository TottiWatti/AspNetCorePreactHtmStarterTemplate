{
  "compilerOptions": {
    // Allow checking JavaScript files
    "allowJs": true,
    // I mean, check JavaScript files for real
    "checkJs": true,
    // Do not generate any output files
    "noEmit": true,
    // Target ES syntax version
    "target": "ES2019",
    // html template literals highlight
    "plugins": [
      {
        "name": "typescript-lit-html-plugin"
      }
    ]
  },
  "exclude": [ "wwwroot/lib" ],
  "include": [ "wwwroot/src" ]
}